generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model Course {
  id                     String   @id @default(uuid()) @db.Uuid
  department             String
  courseCode             String
  title                  String
  units                  Json?
  requirements           Json?
  flattenedPrerequisites String[]
  flattenedCorequisites  String[]
  url                    String?
  updatedAt              DateTime @updatedAt @db.Timestamptz(6)
  keywords               String[]
  description            String?

  @@unique([department, courseCode], name: "department_courseCode_unique")
  @@map("courses")
}